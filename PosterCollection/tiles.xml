<?xml version="1.0" encoding="utf-8" ?>
<tile>
  <visual branding="nameAndLogo" displayName="Star">

    <binding template="TileSmall" >
      <image placement="background" src="Assets/background.jpg" />
      <text></text>
      <text></text>
    </binding>

    <binding template="TileMedium">
      <image  placement="background" src="Assets/background.jpg"  />
      <group>
        <subgroup>
          <text  hint-style="caption" hint-align="center" >我是标题</text>
          <text  hint-style="captionsubtle" hint-align="center" hint-wrap="true">我是内容</text>
        </subgroup>
      </group>
    </binding>

    <binding template="TileWide"  displayName="Starlist">
      <image placement="background" src="Assets/background.jpg"  />
      <group>
        <subgroup>
          <image  hint-align="stretch"  src="Assets/defaultPoster.jpg" />
        </subgroup>
        <subgroup>
          <text hint-style="caption" hint-align="center">我是标题</text>
          <text hint-style="captionsubtle" hint-align="center" hint-wrap="true">我是内容</text>
        </subgroup>
      </group>
    </binding>

    <binding template="TileLarge"  displayName="Starlist">
      <image src="Assets/background.jpg" placement="Assets/background"/>
      <text hint-style="caption" hint-align="center">我是标题</text>
      <text hint-style="captionsubtle" hint-align="center" hint-wrap="true">我是内容</text>
    </binding>

  </visual>
</tile>